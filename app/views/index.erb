<head>
  <title>Laugh Tracks</title>
  <link href='/main.css' rel="stylesheet" type="text/css" />
</head>

<header>
  <h1>Comedians</h1>
</header>

<nav>
  <p>Statistics</p>
    <p>Average Age: <%= @comedians.average(:age).to_i %></p>
    <p>Average Runtime: <%= @specials.average_runtime %></p>
    <p>Total Specials: <%= @specials.count %></p>
    <p>Cities: <%= @comedians.distinct.pluck(:city) %></p>
</nav>

<section>
  <% @comedians.each do |comedian| %>
  <article id='comic-<%= comedian.id %>'>
    <h3><%= comedian.name %></h3>
    <ul>
      <li>Age: <%= comedian.age %></li>
      <li>City: <%= comedian.city %></li>
    </ul>
    <% if comedian.specials.size > 0 %>
    <h4><%= "Specials" %></h4>
    <p><%= "Count: #{comedian.specials.count}" %>
    <% end %>
    <ul>
    <% comedian.specials.each do |special| %>
      <li><%= special.name %></li>
      <li>Runtime: <%= special.runtime %></li>
      <img src=<%= special.thumbnail %>>
    <% end %>
    </ul>
  </article>
  <% end %>
</section>
